{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "lib": ["es2017"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "declaration": true
  },
  "include": [
    "src/**/*"
  ]
}
